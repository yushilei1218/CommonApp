<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8d8d8"
    tools:context="com.yushilei.commonapp.ui.basedata.JobTypeActivity">

    <Button
        android:id="@+id/act_job_type_get_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getJOB"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/act_job_class_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="LinearLayoutManager"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/act_job_type_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="LinearLayoutManager"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/act_job_sub_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="LinearLayoutManager"/>
    </LinearLayout>

</LinearLayout>
