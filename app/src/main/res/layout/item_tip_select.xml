<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tip_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_white_stoke_blue_conner"
        android:padding="10dp"
        android:text="确认选点" />

    <TextView
        android:id="@+id/item_tip_select_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_tip_select_tv"
        android:padding="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_tip_select_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tip_select_name"
        android:layout_toLeftOf="@id/item_tip_select_tv"
        android:padding="10dp"
        android:textSize="14sp" />
</RelativeLayout>